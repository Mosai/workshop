#/usr/bin/env sh

# Gets the lib folder relative to this script location
# If this script is in /foo/bin, points to /foo/lib
posit_path="$(cd "$(dirname "$0")/../lib";pwd)"

. "$posit_path/posit.sh" || exit 1

depur () ( . "$posit_path/depur.sh" && depur "$@" )

# Enables word split on zsh
command -v setopt 2>/dev/null >/dev/null && setopt SH_WORD_SPLIT

posit "$@"